<%= simple_form_for(@choice) do |f| %>
  <%= f.error_notification %>
  <div class="all-form-no-border all-form-no-border-inline flex-center">
    <div class="form-inputs">
      <%= f.input :query_id, as: :hidden, input_html: { value: @query.id } %>
      <%= f.input :content, label: false, placeholder: 'Ajouter un choix...' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Soumettre' %>
    </div>
  </div>
<% end %>
