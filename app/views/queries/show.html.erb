<div class="query-banner-show page-banner">
  <div class="page-banner-title">
    <h1><%= @query.content %></h1>
    <% choices = @query.choices %>
    <% total = choices.length %>
    <% if total > 1 %>
      <p><%= total %> choixs trouvés</p>
    <% elsif total == 0 %>
      <p>Aucune choix trouvé</p>
    <% else %>
      <p><%= total %> choix trouvé</p>
    <% end %>
  </div>
</div>
<div class="container round-button-container padded">
  <%= link_to query_path(@query), method: :delete, class: 'round-button-new-element-link' do %>
    <div class="round-button round-button-center round-button-right bg-red flex-center">
      <p class='flex-center'><i class="fa fa-minus" aria-hidden="true"></i></p>
      <div class="round-button-new-element bg-red">
        Supprimer la question
      </div>
    </div>
  <% end %>
  <%= link_to '#', class: 'round-button-new-element-link' do %>
    <div class="round-button round-button-bottom round-button-right bg-green flex-center">
      <p>+</p>
      <div class="round-button-new-element bg-green">
        Ajouter un choix
      </div>
    </div>
  <% end %>
    <div class="query-title">
      <p class='query-title-description'><%= @query.description %></p>
      <p class='query-title-description'>En savoir plus: <%= link_to @query.see_more, @query.see_more %></p>
    </div>
  <% if choices.empty? %>
    <p class='query-title-description'>Aucun choix enregistré</p>
  <% else %>
    <% choices.each_with_index do |choice, index| %>
      <div class="query-container">
        <div class="query-item query-id">
          <%= index + 1 %>
        </div>
        <hr>
        <div class="query-item query-content">
          <%= choice.content %>
        </div>
        <hr>
        <div class="query-item query-actions">
          <%= link_to '#' do %>
            <i class="fa fa-eye" aria-hidden="true" id="show"></i>
          <% end %>
          <%= link_to '#' do %>
            <i class="fa fa-pencil" aria-hidden="true" id="edit"></i>
          <% end %>
          <%= link_to '#', method: :delete do %>
            <i class="fa fa-trash-o" aria-hidden="true" id="delete"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>

</div>
