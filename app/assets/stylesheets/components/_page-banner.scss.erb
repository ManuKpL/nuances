.page-banner {
  position: relative;
  top: 0;
  left: 0;
  width: 100%;
  height: 60vh;
  background-size: cover;
  background-position: center;
  &-sm { height: 35vh; background-position: top }
  &-title {
    color: white;
    position: absolute;
    bottom: 5vh;
    left: 0;
    width: 100%;
    padding-left: 20vw;
    background-color: rgba(250,250,250,0.25);
    h1 { font-weight: 900 }
    p { padding-left: 20px }
  }
  &-mic { background-image: url(<%= asset_path('mic.jpg') %>) }
  &-notebook { background-image: url(<%= asset_path('notebook.jpg') %>) }
  &-notepad { background-image: url(<%= asset_path('notepad.jpg') %>) }
  &-keyboard { background-image: url(<%= asset_path('keyboard.jpg') %>) }
}

@media screen and (max-width: 768px) {
  .page-banner { height: 100vh }
}
