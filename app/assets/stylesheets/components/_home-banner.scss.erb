// Home Polygon
$home-polygon: 10vh;
$height: 94vh;
$polygon: $height - $home-polygon;

.home-banner {
  position: relative;
  top: 0;
  right: 0;
  left: 0;
  height: $height;
  clip-path: polygon(0 0,100% 0,100% 100%,0 $polygon);
  background-image: url(<%= asset_path('banner.jpg') %>);
  background-size: cover;
  background-position: center;
  flex-direction: column;
  &-text {
    margin-bottom: 15vh;
    width: 90vw;
    max-width: 800px;
    padding: 25px 50px 50px 50px;
    background-color: rgba(250,250,250,0.25);
    border-radius: 2px;
    h1 {
      font-weight: 900;
      font-size: 5vw;
    }
  }
  &-cta {
    margin: 0 40px;
    font-size: 24px;
    border: 1px solid rgba(250,250,250,0.7);
    border-radius: 2px;
    width: 250px;
    height: 150px;
    &:hover {
      text-decoration: none;
      color: white;
      box-shadow: 0 0 10px rgba(250,250,250,0.7);
    }
  }
}

@media screen and (max-width: 767px) {
  .home-banner-text {
    padding: 25px;
    h1 { font-size: 60px }
  }
}
